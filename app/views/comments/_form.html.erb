<div class="media-content">
  <%= form_with model: [@tweet, @comment], local: true do |form| %>
    <div class="field">
    <p class="control">
      <%= form.text_field :commenter, class: "input", placeholder: 'Commenter' %>
    </p>
    </div>
    <div class="field">
      <p class="control">
        <%= form.text_area :body, class: "textarea", placeholder: "Add a comment..." %>
      </p>
    </div>
    <div class="field is-grouped">
    <nav class="level">
      <div class="level-left">
        <div class="level-item">
           <%= form.submit submit, class: 'button is-info'%>
        </div>
        <div class="level-item">
          <%= link_to "Back", root_path, class: 'button is-info is-light' %>
        </div>
      </div>
      <div class="level-right">
        <div class="level-item">
          <label class="checkbox">
            <input type="checkbox"> Press enter to submit
          </label>
        </div>
      </div>
    </nav>
    <% end %>
  </div>