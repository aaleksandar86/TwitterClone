<div class="field is-grouped">
  <div class="control">
    <div class=" is-info">
      <i class="fab fa-twitter fa-3x"></i>
    </div>
  </div>
  <div class="control">
    <h1 class="is-size-3">Tweets Timeline</h1><br>
  </div>
</div>
<br>
<%= link_to "New Tweet", new_tweet_path, class: 'button is-info is-size-4' %><br><br>
<% @tweets.each do |tweet| %>
<article class="media">
  <figure class="media-left">
    <p class="image is-64x64">
      <img src="https://bulma.io/images/placeholders/128x128.png">
    </p>
  </figure>
  <div class="media-content">
    <div class="content">
    <%= link_to tweet_path(tweet) do %>
      <p>
        <strong>John Smith</strong> <small>@johnsmith</small> <small><%= time_ago_in_words(tweet.created_at) %></small>
        <br>
        <%= tweet.body %>
      </p>
      <% end %>
    </div>
    <nav class="level is-mobile">
      <div class="level-left">
        <%= link_to tweet_path(tweet), class: 'level-item' do%>
          <span class="icon is-small"><i class="fas fa-reply"></i></span>
        <% end %>
        <a class="level-item">
          <span class="icon is-small"><i class="fas fa-retweet"></i></span>
        </a>
        <a class="level-item">
          <span class="icon is-small"><i class="fas fa-heart"></i></span>
        </a>
      </div>
    </nav>
  </div>
  <div class="media-right">
   <%= link_to tweet_path(tweet), class: "button is-info" do%>
      <span class="icon is-small"><i class="fa fa-expand"></i></span>
    <% end %>
    <%= link_to edit_tweet_path(tweet), class: "button is-info" do%>
      <span class="icon is-small"><i class="fas fa-edit"></i></span>
    <% end %>
    <%= link_to tweet_path(tweet), method: :delete, data: { confirm: "Are you sure you want to delete this tweet?" }, class: "button is-danger" do %>
      <span class="icon is-small"><i class="fas fa-trash-alt"></i></span>
    <% end %>
  </div>
</article>
 <% end %>
 <footer class="footer">
  <div class="has-text-centered">
    <p>
