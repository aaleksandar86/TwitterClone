<article class="media">
  <figure class="media-left">
    <p class="image is-64x64">
      <img src="https://bulma.io/images/placeholders/128x128.png">
    </p>
  </figure>
  <div class="media-content">
    <div class="content">
      <p>
        <strong>John Smith</strong> <small>@johnsmith</small> <small>31m</small>
        <br>
        <%= @tweet.body %>
      </p>
    </div>
    <nav class="level is-mobile">
      <div class="level-left">
        <a class="level-item">
          <span class="icon is-small"><i class="fas fa-reply"></i></span>
        </a>
        <a class="level-item">
          <span class="icon is-small"><i class="fas fa-retweet"></i></span>
        </a>
        <a class="level-item">
          <span class="icon is-small"><i class="fas fa-heart"></i></span>
        </a>
      </div>
    </nav>
  </div>
  <div class="media-right">
    <%= link_to root_path do %>
      <span class="icon is-small is-info"><i class="fa fa-window-close fa-2x"></i></span>
    <% end %>
  </div>
</article>

<article class="media">
    <div class="media-content">
      <div class="content">
        <p><%= @tweet.comments.count %> Comments</p>
      </div>
    </div>
      <%= link_to "New Comment", new_tweet_comment_path(@tweet), class: 'button is-info' %>
  </article>

<% @tweet.comments.each do |comment| %>
    <article class="media">
      <div class="media-content">
        <div class="content">
          <p>
          <strong><%= comment.commenter %></strong> <small><%= time_ago_in_words(comment.created_at) %> ago </small>
          <br>
            <%= comment.body %>
          </p>
        </div>
        <nav class="level is-mobile">
        <div class="level-left">
          <%= link_to edit_tweet_comment_path(comment.tweet, comment), class:"level-item" do %>
            <span class="icon is-small"><i class="fas fa-edit"></i></span>
          <% end %>
          <%= link_to tweet_comment_path(comment.tweet, comment), method: :delete , class: "level-item", data: { confirm: "Are you sure you want to delete this comment?" } do %>
            <span class="icon is-small"><i class="fas fa-trash-alt"></i></span>
          <% end %>
          </div>
        </nav>
    </article>
<% end %>


