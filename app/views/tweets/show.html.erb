<article class="media">
  <figure class="media-left">
    <p class="image is-64x64">
      <img src="https://bulma.io/images/placeholders/128x128.png">
    </p>
  </figure>
  <div class="media-content">
    <div class="content">
      <p>
        <strong><%= @tweet.user.name %></strong> <small>@<%= @tweet.user.name.downcase %></small> <small><%= time_ago_in_words(@tweet.created_at) %> ago</small>
        <br>
        <%= @tweet.body %>
      </p>
    </div>
    <nav class="level is-mobile">
      <div class="level-left">
        <a class="level-item">
          <span class="icon is-small"><i class="fas fa-reply"></i></span>
        </a>
        <a class="level-item">
          <span class="icon is-small"><i class="fas fa-retweet"></i></span>
        </a>
        <a class="level-item">
          <span class="icon is-small"><i class="fas fa-heart"></i></span>
        </a>
      </div>
    </nav>
  </div>
  <div class="media-right">
    <%= link_to root_path do %>
      <span class="icon is-small is-info"><i class="fa fa-window-close fa-2x"></i></span>
    <% end %>
  </div>
</article>

<article class="media">
    <div class="media-content">
      <div class="content">
        <p><%= pluralize(@tweet.comments.count, 'Comment') %></p>
      </div>
    </div>
    <%# <% if local_assigns[:show] && logged_in? %>
      <%= link_to "New Comment", new_tweet_comment_path(@tweet), class: 'button is-info' %>
    <%# <% end %>
  </article>

  <%= render @tweet.comments %>




