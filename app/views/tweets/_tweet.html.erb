<article class="media">
  <figure class="media-left">
    <p class="image is-64x64">
      <img src="https://bulma.io/images/placeholders/128x128.png">
    </p>
  </figure>
  <div class="media-content">
    <div class="content">
    <%= link_to tweet_path(tweet) do %>
      <p>
        <strong><%= tweet.user.name %></strong> <small>@<%= tweet.user.name.downcase %></small> <small><%= time_ago_in_words(tweet.created_at) %> ago</small>
        <br>
        <%= tweet.body %>
      </p>
      <% end %>
    </div>
    <nav class="level is-mobile">
      <div class="level-left">
        <%= link_to tweet_path(tweet), class: 'level-item' do%>
          <span class="icon is-small"><i class="fas fa-reply"></i></span>
        <% end %>
        <a class="level-item">
          <span class="icon is-small"><i class="fas fa-retweet"></i></span>
        </a>
        <a class="level-item">
          <span class="icon is-small"><i class="fas fa-heart"></i></span>
        </a>
      </div>
    </nav>
  </div>
  <div class="media-right">
   <%= link_to tweet_path(tweet), class: "link is-info" do%>
      <span class="icon is-small"><i class="fa fa-expand" aria-hidden="true"></i></span>
    <% end %>
    <% if logged_in? && equal_with_current_user?(tweet.user) %>
    <%= link_to edit_tweet_path(tweet), class: "link is-info" do%>
      <span class="icon is-small"><i class="fas fa-edit" aria-hidden="true"></i></span>
    <% end %>
    <% end %>
    <% if logged_in? && equal_with_current_user?(tweet.user) %>
    <%= link_to tweet_path(tweet), method: :delete, data: { confirm: "Are you sure you want to delete this tweet?" }, class: "link is-info" do %>
      <span class="icon is-small"><i class="fas fa-trash-alt" aria-hidden="true"></i></span>
    <% end %>
    <% end %>
  </div>
</article>
